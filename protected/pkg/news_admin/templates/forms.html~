{% macro form(action, method="GET", value="", file_upload=False, fields=[]) %}
    <form {% if file_upload %}enctype="multipart/form-data"{% endif %} action="{{ action }}" method="{{ method }}">
        {{ caller() }}
        <input type="submit" value="{{ value }}" />
    </form>
{% endmacro %}

        
{% macro input(name, value="", type="text", label="") %}
    {% set id = [type, 'field', name]|join('_') %}
    {% if label %}
        <label for="{{ id }}">{{ label }}</label>
    {% endif %}
    <input type="{{ type }}" value="{{ value }}" name="{{ name }}" id="{{ id }}" /><br />
{% endmacro %}


{% macro textarea(name, value="", rows=4, cols=50, label="") -%}
    {% set id = ['textarea', name]|join('_') %}
    {% if label %}
        <label for="{{ id }}">{{ label }}</label>
    {% endif %}
    <textarea id="{{ id }}" name="{{ name }}" rows="{{ rows }}" cols="{{ cols }}">
        {{- value -}}
    </textarea>
{%- endmacro %}
